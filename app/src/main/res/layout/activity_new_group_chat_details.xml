<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NewGroupChatDetails">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/rl1">

        <ImageView
            android:id="@+id/backbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="13dp"
            android:src="@drawable/back_button" />

        <TextView
            android:id="@+id/newgrouptitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="78dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:layout_toRightOf="@id/backbutton"
            android:gravity="center"
            android:text="New Group"
            android:textColor="#5D71C9"
            android:textSize="23dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <EditText
        android:id="@+id/groupchatname"
        android:layout_width="338dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:background="@null"
        android:hint="Group Name"
        android:paddingStart="13.00dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/_32sdp"
        android:layout_marginEnd="@dimen/_32sdp"
        android:background="@android:color/darker_gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/membersNumTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Members: "
            android:layout_marginTop="10dp"
            android:layout_marginStart="@dimen/_32sdp"/>

        <TextView
            android:id="@+id/membersNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/membersNumTitle"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/selectedGroupContactRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"/>

    <Button
        android:id="@+id/proceedbuttonNewGroupDetails"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginVertical="@dimen/_30sdp"
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:background="@drawable/baseline_arrow_forward_24"
        android:backgroundTint="#5D71C9"
        android:shadowColor="@color/black"/>

</LinearLayout>
